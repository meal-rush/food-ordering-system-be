{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".", // Set root directory to the current directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["*.ts", "routes/**/*.ts"], // Include all .ts files in the current directory and routes folder
  "exclude": ["node_modules"]
}
